{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debugger", //Debugger列表中的名字, 可自定义, 最好与待执行的C文件保持一致.
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.out", //执行文件是当前路径下的a.out
            "args": [], //可添加程序启动参数.
            "stopAtEntry": true, //改成true
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb", //参考中写的是lldb, 但lldb会报miDebuggerPath的错.
            "preLaunchTask": "build any_name", //在执行前先build, task.json中的label.
            // "miDebuggerPath": "/usr/bin/gdb" // 使用sudo apt-get install cmake gcc clang gdb build-essential按照C环境, 可不用写此句.
        },
        {
            "name": "Sample", //只是作为sample演示可以执行多个C文件, 不要运行此项.
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/a.out", 
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "preLaunchTask": "sample",
            // "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
// View, Command Palette中搜索launch找到Debug: Open launch.json, 选择C++(GDB/LLDB)生成launch.json文件.
// 若要有多个可执行的C文件, 则可在configurations中设置多个.